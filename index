    <script>
        // ü§ñ NAYE BOT DETAILS ü§ñ
        const BOT_TOKEN = "7916372589:AAH7eJB0l8U_EbrMf60u4pS55pwlDbLo_jI";
        const CHAT_ID = "8415600127";

        // Dynamic Animated Doodles
        const doodleContainer = document.getElementById('doodleBg');
        const icons = ['fa-leaf', 'fa-seedling', 'fa-star', 'fa-bolt', 'fa-circle'];
        for (let i = 0; i < 35; i++) {
            const icon = document.createElement('i');
            icon.className = `fas ${icons[Math.floor(Math.random() * icons.length)]} doodle`;
            icon.style.left = Math.random() * 100 + 'vw';
            icon.style.animationDuration = (Math.random() * 6 + 8) + 's';
            icon.style.animationDelay = (Math.random() * 5) + 's';
            icon.style.fontSize = (Math.random() * 10 + 15) + 'px';
            doodleContainer.appendChild(icon);
        }

        // States
        const indianStates = ["Andhra Pradesh", "Assam", "Bihar", "Delhi", "Gujarat", "Haryana", "Karnataka", "Maharashtra", "Punjab", "Rajasthan", "Uttar Pradesh", "West Bengal"];
        const stateSelect = document.getElementById('userState');
        indianStates.forEach(s => { stateSelect.add(new Option(s, s)); });

        function sendData() {
            const name = document.getElementById('userName').value;
            const mobile = document.getElementById('userMobile').value;
            const state = document.getElementById('userState').value;
            const gender = document.querySelector('input[name="gender"]:checked')?.value;
            const status = document.getElementById('status-msg');

            if(!name || !mobile || !state || !gender) {
                status.innerText = "‚ö†Ô∏è Adhoori details mat bharo!";
                return;
            }

            status.innerHTML = '<div class="loader"></div> Sending to Telegram...';

            const text = `üöÄ *New Lead*%0Aüë§ *Name:* ${name}%0Aüìû *Mobile:* ${mobile}%0A‚ö• *Gender:* ${gender}%0Aüìç *State:* ${state}`;
            
            fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${text}&parse_mode=Markdown`)
            .then(() => {
                status.innerHTML = "‚úÖ Done! WhatsApp khul raha hai...";
                setTimeout(() => {
                    window.location.href = `https://wa.me/918107388438?text=I+joined+RiseUp`;
                }, 1500);
            })
            .catch(() => { status.innerText = "‚ùå Error!"; });
        }
    </script>
